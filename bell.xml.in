<compiz>
    <plugin name="bell" useBcop="true">
	<_short>Audible Bell</_short>
	<_long>Plays an audible sound for the system bell</_long>
	<category>Utility</category>
	<deps>
	    <relation type="after"><plugin>opengl</plugin></relation>
	</deps>
	<options>
	<option name="audible_bell" type="bool">
		<_short>Audible Bell</_short>
		<_long>Audible system beep</_long>
		<default>true</default>
	    </option>
	</options>
    </plugin>
</compiz>
